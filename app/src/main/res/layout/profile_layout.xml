<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/updateinfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Update Information" />

    <TextView
        android:id="@+id/idnoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/datejoinedTextView"
        android:layout_alignStart="@+id/datejoinedTextView"
        android:layout_marginBottom="20dp"
        android:text="idno"
        android:textColor="#005880"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/datejoinedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/saveBtn"
        android:layout_alignRight="@+id/saveBtn"
        android:layout_marginBottom="20dp"
        android:text="datejoined"
        android:textColor="#005880"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/itemsreturnedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/datejoinedTextView"
        android:layout_alignStart="@+id/datejoinedTextView"
        android:text="itemsreturned"
        android:textColor="#005880"
        android:textSize="16sp" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/uploadImageView"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/ic_menu_upload" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

    </RelativeLayout>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/emailverifyTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Save"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="25dp"
        android:text="Date Joined:"
        android:textColor="#005880"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="22dp"
        android:layout_toLeftOf="@+id/itemsreturnedTextView"
        android:layout_toStartOf="@+id/itemsreturnedTextView"
        android:text="Items Returned:"
        android:textColor="#005880"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="7dp">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:text="Name Goes Here"
            android:textColor="#005880"
            android:textSize="22sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:textColor="#005880"
            android:textSize="18sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_below="@+id/updateinfoTextView"
        android:layout_marginTop="27dp"
        android:text="ID Number:"
        android:textColor="#005880"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/emailverifyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="Verified"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

</RelativeLayout>